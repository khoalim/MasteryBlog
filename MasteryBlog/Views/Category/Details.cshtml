@model MasteryBlog.Models.Category

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Model.Name Page</title>
    <link rel="stylesheet" href="~/Styles/DetailStyle.css" />

</head>
<body>
    <h1> Details for @Model.Name</h1>
    <div id ="categories">
        <p><img src="@Model.Image" alt=@Model.Name style="height: 200px; width: 340px;" /></p>
        <p>Category: <span>@Model.Name</span></p>
        <p>Description: <span>@Model.Description</span></p>
        <p>Posts: <a href="/Post/PostByCategory/@Model.Id">View Posts for @Model.Name</a></p>
       
    </div>

    <nav>
        <p><a href="/Home/Index" class="flexItem flexitem--1">Home</a></p>
        <p><a href="/Category/Index" class="flexItem flexitem--2">Categories</a></p>        
    </nav>
    <footer><h6>&copy; Travel Blog 2019</h6></footer>

</body>
</html>
